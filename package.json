{
    "name": "otus_homework_lesson47",
    "version": "1.0.0",
    "description": "ДЗ для лекции \"Роутинг и ленивая загрузка страниц при работе с React\"",
    "scripts": {
        "test": "tsc --noEmit && jest --passWithNoTests --coverage",
        "lint": "prettier --check . && eslint . --ext .js,.ts",
        "lint:fix": "prettier --write . && eslint . --fix",
        "build": "webpack --mode=production",
        "start": "webpack serve --mode=development",
        "pack": "tsc",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build --test --quiet",
        "loki-test": "loki test --requireReference --reactUri file:./storybook-static",
        "loki-update": "loki update --requireReference --reactUri file:./storybook-static"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SergeyAkkuratov/OTUS_homework_lesson47.git"
    },
    "author": "Sergey Akkuratov",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/SergeyAkkuratov/OTUS_homework_lesson47/issues"
    },
    "homepage": "https://github.com/SergeyAkkuratov/OTUS_homework_lesson47#readme",
    "devDependencies": {
        "@babel/core": "^7.24.4",
        "@babel/preset-env": "^7.24.4",
        "@babel/preset-react": "^7.24.7",
        "@babel/preset-typescript": "^7.24.1",
        "@chromatic-com/storybook": "^1.5.0",
        "@eslint/js": "^9.0.0",
        "@storybook/addon-essentials": "^8.1.10",
        "@storybook/addon-interactions": "^8.1.10",
        "@storybook/addon-links": "^8.1.10",
        "@storybook/addon-onboarding": "^8.1.10",
        "@storybook/addon-webpack5-compiler-swc": "^1.0.4",
        "@storybook/blocks": "^8.1.10",
        "@storybook/react": "^8.1.10",
        "@storybook/react-webpack5": "^8.1.10",
        "@storybook/test": "^8.1.10",
        "@testing-library/dom": "^10.1.0",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^16.0.0",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^6.10.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-html": "^8.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-storybook": "^0.8.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^9.0.11",
        "jest-environment-jsdom": "^29.7.0",
        "loki": "^0.35.0",
        "prettier": "^3.2.5",
        "storybook": "^8.1.10",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.4",
        "typescript-eslint": "^7.6.0",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.3"
    },
    "lint-staged": {
        "*.{js,ts,html}": "eslint --fix",
        "*.{js,ts,css,md,yml}": "prettier --write"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.2.6",
        "bootswatch": "^5.3.3",
        "firebase": "^10.12.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-google-charts": "^4.0.1",
        "react-redux": "^9.1.2",
        "react-router-dom": "^6.24.0",
        "uuid": "^10.0.0"
    },
    "overrides": {
        "loki": {
            "@storybook/react": "$@storybook/react"
        }
    },
    "loki": {
        "configurations": {
            "chrome.laptop": {
                "target": "chrome.app",
                "width": 1366,
                "height": 768,
                "deviceScaleFactor": 1,
                "mobile": false
            }
        }
    }
}
